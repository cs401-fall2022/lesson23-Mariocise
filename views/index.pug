extends layout

block content
  doctype html 
  html
    body
      h1(id='title')= title
      button(type='button' id='create-post-btn' style='font-size:30px; margin:20px') Create Post
      br
      each entry in data
        container(id='container')
          h2(id='title-'+entry.id)= entry.title 
          p(id='entry-'+entry.id style='white-space:pre;')= entry.entry 
          button(type='button' id='edit-post-btn-'+entry.id class='edit-post-btn') Edit Post 
          button(type='button' id='delete-post-btn-'+entry.id class='delete-post-btn') Delete Post
      br
      br
      div(id='create-post-popup' style='display: none' class='modal')
      div(id='edit-post-popup' style='display: none' class='modal')
      div(id='delete-post-popup' style='display: none' class='modal')
      script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js')
      script(type='text/javascript' src='javascripts/script.js')

